{
  "name": "oshwatch-gcc",
  "version": "1.1.4",
  "inherits": {
    "nordic-nrf51822-gcc": "^1.0.0"
  },
  "description": "Official OSHWatch gcc build target for the nrf51822 16KB chip.",
  "homepage": "http://oshchip.org",
  "repository": {
    "url": "git@github.com:drewcassidy/target-OSHWatch-gcc.git",
    "type": "git"
  },
  "licenses": [
    {
      "url": "https://spdx.org/licenses/Apache-2.0",
      "type": "Apache-2.0"
    }
  ],
  "keywords": [
    "OSHWatch",
    "gcc",
    "nordic",
    "nRF51822",
    "OSHW"
  ],
  "similarTo": [
    "mkit",
    "oshchip"
  ],
  "config": {
    "nrf51822": {
      "ram_size": "16K"
    },
    "image": {
      "heap": {
        "warning_threshold": 1024
      }
    },
    "hardware": {
      "clocks": {
        "nrf": {
          "lfclk_src": 0
        }
      },

      "pins": {
        "CHG":        "p1",
        "IND":        "p2",
        "LCD_RST":    "p3",
        "LCD_CE":     "p4",
        "LCD_DC":     "p5",
        "LCD_MOSI":   "p6",
        "LCD_CLK":    "p7",
        "BACKLIGHT":  "p12",
        "ACC_INT1":   "p13",
        "ACC_INT2":   "p14",
        "SDA":        "p15",
        "SDL":        "p16",
        "BTN_BACK":   "p17",
        "VIB":        "p21",
        "BTN_SELECT": "p25",
        "BTN_DOWN":   "p26",
        "BTN_UP":     "p27",
        "BTN_RIGHT":  "p28",
        "BTN_LEFT":   "p29",
        "LED1":       "p8",
        "LED2":       "p9",
        "LED3":       "p10",
        "LED4":       "p11"
      }
    }
  }
}
